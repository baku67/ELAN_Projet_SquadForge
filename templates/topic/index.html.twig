{% extends 'base.html.twig' %}

{% block title %}Topics{% endblock %}

{% block body %}


    <header>
        <a href="{{ path('app_home') }}"><img src="{{ asset('img/logoSquadForge_Black_Rogned.png') }}" class="logoPng" /></a>
        <nav>
            <a href="{{ path('app_games') }}">Jeux</a>
        </nav>
    </header>
    <div class="headerUnderline"></div>

    <div class="main">

        <p>Jeux - {{ gameFrom.title }} - Topics</p>
        <p>Home - Topics</p>

        <h2>TOPICS</h2>

        <div style="display:inline-flex; width:100%; justify-content:center;">
            <h3 id="allTopicsToggle" class="toggleTopicFilter">TOUS <span class="gameListCount">({{ allTopicsCount }})</span></h3>
            <h3 id="gameTopicsToggle" class="toggleTopicFilter">{{ gameFrom.title }} <span class="gameListCount">({{ gameTopicsCount }})</span></h3>
        </div>

        <div id="allTopicsDiv">
            {% for topic in allTopicsDesc %}
                {{ dump(topic) }}
            {% endfor %}
        </div>

        

        <div id="gameTopicsDiv">
            {% for topic in gameTopicsDesc %}
                {{ dump(topic) }}
            {% endfor %}
        </div>

    </div>


    <script>

        // Changement de liste affich√© selon l'option de filtre choisie
        // Si from game: filter Game par defaut
        window.onload = function() {

            document.querySelector('#allTopicsToggle').addEventListener('click', function() {

            })

        }
    </script>

{% endblock %}
